<h1>New Post</h1>

<%= form_for :post, url: posts_path do |f| %>
	<% if @post.errors.any? %>
		<div id = "errors">
			<h2><%= pluralize(@post.errors.count, "error") %>Prevented this post from saving</h2>
		</div>

	<%end%>
	<%= f.label :Title %><br>
	<%= f.text_field :Title %><br>
	<br>
	<%= f.label :body %><br>
	<%= f.text_field :body %><br>
	<br>
	<%= f.submit %>
<% end %>
